package practicas;

import java.util.Scanner;

public class Ejrefuerzo{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

   
        System.out.print("Ingrese su nombre: ");
        String nombre = sc.nextLine();

        System.out.print("Ingrese su edad: ");
        int edad = sc.nextInt();

        System.out.print("¿Tiene credenciales activas? (true/false): ");
        boolean credenciales = sc.nextBoolean();

        System.out.print("Ingrese el tipo de usuario (A=Administrador, P=Profesor, E=Estudiante): ");
        char tipoUsuario = sc.next().toUpperCase().charAt(0);  

        System.out.println("Resultado de Evaluación ");

        
        if (credenciales) {
            if (edad >= 18) {
                System.out.println("Acceso permitido");
            } else {
                System.out.println("Acceso restringido por edad");
            }
        } else {
            System.out.println("Acceso denegado");
        }

       
        switch (tipoUsuario) {
            case 'A':
                System.out.println("Panel de administración");
                break;
            case 'P':
                System.out.println("Acceso a clases y recursos");
                break;
            case 'E':
                System.out.println("Consulta tus tareas y calificaciones");
                break;
            default:
                System.out.println("Tipo de usuario no reconocido");
        }

    }
}
